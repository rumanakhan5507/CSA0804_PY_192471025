#Problem 14
user_input = input("Enter a list of numbers or words (space-separated): ")
items = user_input.split()
frequency_list = []
for item in items:
    found = False
    for pair in frequency_list:
        if pair[0] == item:
            pair[1] += 1
            found = True
            break
    if not found:
        frequency_list.append([item, 1])
print("Frequencies (as list):", frequency_list)



