#Problem 12
text = input("Enter a string: ")
words = text.split()
unique_words = []
for word in words:
    if word not in unique_words:
        unique_words.append(word)
max_count = 0
most_frequent = ""
    count = words.count(word)
    if count > max_count:
        max_count = count
        most_frequent = word
print(f"Most frequent word: '{most_frequent}' (occurs {max_count} times)")


#Problem 13
a=input("Enter a string=")
digit=False
for i in a :
    i.isdigit()
    digit=True
    break
if digit:
    print(a, "has digits" )
else:
    print(a,"does not have digits")


#Problem 14
text = input("Enter a string: ")
vowels = "aeiouAEIOU"
result = ""
for char in text:
    if char not in vowels:
        result += char
print("String without vowels:", result)


